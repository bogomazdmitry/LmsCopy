@using Microsoft.AspNetCore.Mvc.TagHelpers
@model MarkProfessorModel
@{
    ViewData["Title"] = "Edit mark";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4 col-md-offset-2">
        <form method="post">
            <hr/>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="SubjectName" class="form-control" autocomplete="name" aria-required="true" placeholder="Subject name"/>
                <label asp-for="SubjectName">Subject name</label>
                <span asp-validation-for="SubjectName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="StudentName" class="form-control" autocomplete="name" aria-required="true" placeholder="Student name"/>
                <label asp-for="StudentName">Student name</label>
                <span asp-validation-for="StudentName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Value" class="form-control" autocomplete="mark" aria-required="true" placeholder="10"/>
                <label asp-for="Value">Mark</label>
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>